-- Create the database
CREATE DATABASE PoisePMS;

-- Use the database
USE PoisePMS;

-- Create StructuralEngineer table
CREATE TABLE StructuralEngineer (
    engineer_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    contact_details VARCHAR(255) NOT NULL
);

-- Create ProjectManager table
CREATE TABLE ProjectManager (
    manager_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    contact_details VARCHAR(255) NOT NULL
);

-- Create Architect table
CREATE TABLE Architect (
    architect_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    contact_details VARCHAR(255) NOT NULL
);

-- Create Customer table
CREATE TABLE Customer (
    customer_id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    contact_details VARCHAR(255) NOT NULL
);

-- Create Project table
CREATE TABLE Project (
    project_id INT AUTO_INCREMENT PRIMARY KEY,
    project_name VARCHAR(255) NOT NULL,
    deadline DATE NOT NULL,
    start_date DATE NOT NULL,
    completion_date DATE,
    finalised BOOLEAN DEFAULT FALSE,
    engineer_id INT,
    manager_id INT,
    architect_id INT,
    customer_id INT,
    FOREIGN KEY (engineer_id) REFERENCES StructuralEngineer(engineer_id),
    FOREIGN KEY (manager_id) REFERENCES ProjectManager(manager_id),
    FOREIGN KEY (architect_id) REFERENCES Architect(architect_id),
    FOREIGN KEY (customer_id) REFERENCES Customer(customer_id)
);
